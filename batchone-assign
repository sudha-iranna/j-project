pipeline {
agent any
parameters {
  choice choices: ['master', 'main'], description: 'enter branch to run', name: 'BRANCH'
}

stages {
  

  stage('TEST1') {
      when {
      expression { params.BRANCH == 'master' }
    }
    steps {
     echo "this is test1 stage" 
	
    }
  }
  
 stage('TEST2') {
      when {
      expression { params.BRANCH == 'master' }
    }
    steps {
     echo "this is test2 stage" 
	
    }
  } 

}

}
